<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dckwlb2by/image/upload/v1700237553/movie_banner.jpg)">
        <h2><%= @list.name.capitalize %></h2>
        <div class="text-end">
        <p><%= link_to "Edit info", edit_list_path(@list), {:class => "card-link"} %></p>
        </div>
      </div>
    </div>
  </div>

  <h3>Movies</h3>
  <p><%= link_to "Add a new movie!", new_list_bookmark_path(@list), {:class => "card-link"} %></p>
  <div class="container row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card text-center text-bg-dark col-3 px-0 mx-2" style="width: 18rem;">
        <div class="poster-container">
          <img src=<%= "#{bookmark.movie.poster_url}" %> class="card-img-top" alt="...">
          <div class="poster-overlay"><%= bookmark.movie.rating %> ‚≠ê</div>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text text-white-50"><%= bookmark.movie.overview %></p>
          <hr>
          <p class="card-text"><%= bookmark.comment %></p>
          <hr>
          <div class=" fw-lighter text-end" style="font-size: 12px;"><%= bookmark.created_at.strftime("Added on %m/%d/%Y") %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
